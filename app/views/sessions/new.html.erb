<div class='login-div'>
  <div class ="login-section center" style='margin-bottom:7vw'>
  <h1 align="center">Log in</h1>
  <br />
  <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: '/login') do |f| %>
    <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :email %>
    </div>
    <div class="col-sm-8">
    <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
    </div>
    <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :password %>
    </div>
    <div class="col-sm-8">
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
    </div>
    <div class="form-group">
    Dont have an account with us yet?<br>
    <a href='/signup'>Sign up Here</a>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
    </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <h4>Test Supplier Profile credentials- </h4>
        <h5>Username: seller@yahoo.com</h5>
        <h5>password: 123</h5>
      </div>
      <div class='col-md-6'>
        <h4>Test Buyer Profile credentials- </h4>
        <h5>Username: buyer@yahoo.com</h5>
        <h5>password: 123</h5>
      </div>
    </div>
  <% end %>
  <br>
  </div>
</div>
