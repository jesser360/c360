      $('#sidebarCollapse').on('click', function () {
          $('#sidebar').toggleClass("hidden")
          $('#sidebarCollapse').hide()
      });
      $('#dismiss').on('click', function () {
          $('#sidebar').toggleClass("hidden")
          $('#sidebarCollapse').show()
      });
    $('#nav_prof_pic').on('click',function(){
      if($('.collapse').is(":visible")){
        $('.collapse').collapse('hide');
