      <h2><%= pluralize(user_order.errors.count, "error") %> prohibited this user_order from being saved:</h2>

      <ul>
      <% user_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='spin'>
