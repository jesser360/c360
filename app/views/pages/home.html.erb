  <script>
    $('#email-btn').on('click',function(e){
      e.preventDefault();
      var email_string = $('#user-email').val()
        $.ajax({
            type: "POST",
            url: "/emails",
            data: { email: { email: email_string} },
            success:function(data) {
              setTimeout(function(){
                $('#thank-you').show('fast')
              },400)
              return false
            },
            error:function(error) {
              return false
            }
          })
        })
  </script>
