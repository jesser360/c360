        <h5>You will be asked to enter your card info again but you will not be double charged</h5>
        <%end%>
        <%= hidden_field_tag(:user_id, @user.id)%>
        <%= hidden_field_tag(:item,params[:item])%>
        <%= hidden_field_tag(:price,params[:price])%>
      </div>
    </div>
    <div class='col-md-3 '>
      <div class='row'>
        <div id='pieChart'></div>
      </div>
    </div>
  </div>
  <!-- BUY NOW ORDER -->
<%else%>
