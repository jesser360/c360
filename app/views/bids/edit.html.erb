<div>
  <h1 align="center">Place your Estimated price for this Bid</h1>
  <h3 align="center">you will be contacted if you are chosen for this Bid</h3>
  <%= form_with(model: @bid, local: true) do |f| %>
    <div class='row signup-form'>
      <h4>Title: <%=@bid.title%><h4>
      <h4>Amount: <%=@bid.amount%> grams<h4>
      <h4>Price range: $<%=@bid.price_min%> - $<%=@bid.price_max%><h4>
    </div>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="control-label col-sm-2 text-right">
          <%= f.label :Your_offered_price %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :lowest_price, class: "form-control", placeholder: "Best estimated price", autofocus: true %>
        </div>
      </div>
    </div>
    <div class='row signup-form'>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 sign-btn signup-form ">
          <%= f.submit "Send out Bid", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
