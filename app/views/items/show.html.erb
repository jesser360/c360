<div class='container'style='margin:10vw'>
  <div class='row'>
    <div class='col-sm-6'>
      <h1>  <%= @item.item_name %></h1>
      <h4><%(@item.rating / @item.rating_count).round.times do%>
      <i class="glyphicon glyphicon-star"></i>
      <%end%>
      <%(5-((@item.rating / @item.rating_count).round)).times do%>
      <i class="glyphicon glyphicon-star-empty"></i>
      <%end%>
      <h4>  <%= @item.description %></h4>
      <%= image_tag(@item.avatar.url, :size => "250x250") %>
      <br>
      <br>
      <h2 class='text-left'>Customer Reviews</h2>
      <%@reviews.each do |review|%>
      <%=link_to user_path_url(review.user) do%>
        <h5><%= image_tag(review.user.avatar.url, :class => "not_nav_prof_pic",) %>
      <%end%>
      <%=review.user.email%></h5>
      <h4><%review.rating.times do%>
      <i class="glyphicon glyphicon-star"></i>
      <%end%>
      <%(5-review.rating).times do%>
      <i class="glyphicon glyphicon-star-empty"></i>
      <%end%>
      <%=review.title%></h4>
      <h5><%=review.body%></h5>
      <hr>
      <%end%>
    </div>
    <div class='col-sm-6'>
      <h3 class='text-center'>Open Batches to Join</h3>
      <%@open_orders.each do |order|%>
      <div class='row'>
        <div class='col-sm-6'>
          <%=link_to edit_bulk_order_path(order) do%>
            <h5>Pie graph pic here</h5>
          <%end%>
        </div>
        <div class='col-sm-6'>
          <h4>Wholesale Price: <%=order.wholesale_price%>$ / gram</h4>
          <h4>BuyNow Price: <%=order.market_price%>$ / gram</h4>
          <h4>Grams left: <%=order.max_amount - order.percent_filled%> grams</h4>
        </div>
      </div>
      <hr>
      <%end%>
    </div>
  </div>


</div>
