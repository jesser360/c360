    <div class="col-md-6">
      <div class='edit-card'>
      <%=link_to item_path(@item) do %>
        <span style='float:right' class='oil-image'><%= image_tag(@item.avatar.url, :size => "220x220") %></span>
      <%end%>
      <h1 id='item_name'><%=@bulk.item_name %></h1>
      <h3><%= @bulk.wholesale_price %>$ / gram</h3>
