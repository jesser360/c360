<div class="container card">
<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%=image_tag(item.image, :size => "250x250") rescue nil%>
  </div>
  <% if item.new_record?%>
  <br>
    <div class="field">
      <%= form.label :item_name %>
      <%= form.text_field :item_name, id: :item_item_name %>
    </div>

    <div class="field">
      <%= form.label :price_per_gram %>
      <%= form.number_field :price, id: :item_price %>
    </div>
  <%else%>
  <br>
    <label>Item: </label><span> <%=item.item_name%></span><br>
    <label>Price: </label><span> <%=item.price%></span>
  <%end%>

  <div class="field">
    <%= form.label :amount_in_total %>
    <%= form.text_field :max_amount, id: :max_amount %>
  </div>
  <div class="field">
    <%= form.label :amount_in_each_bulk_order %>
    <%= form.text_field :bulk_order_amount, id: :bulk_order_amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
